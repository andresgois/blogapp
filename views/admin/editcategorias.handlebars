{{#each error}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Edit Categoria:</h3>
<div class="card">
    <div class="card-body">
        <form method="POST" action="/admin/categorias/edit">
        <input type="hidden" value="{{categoria._id}}" name="id" id="id" aria-describedby="id">
        <div class="form-group">
            <label for="nome">Nome:</label>
            <input type="text" class="form-control" value="{{categoria.nome}}" name="nome" id="nome" aria-describedby="nome">
        </div>
        <div class="form-group">
            <label for="slug">Slug:</label>
            <input type="text" class="form-control" value="{{categoria.slug}}" name="slug" id="slug">
        </div>
        <button type="submit" class="btn btn-primary">Editar categoria</button>
        </form>
    </div>
</div>