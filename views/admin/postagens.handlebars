<h2>Lista de Postagens:</h2>
<hr>
<a href="/admin/postagens/add">
    <button class="btn btn-success">Nova Postagem</button>
</a>

{{#each postagens}}
    <div class="card mt-2">
        <div class="card-body">
            <h4>Titulo: {{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small>
            <br>
            <small>Categoria: {{categoria.nome}}</small>
            <br>
            <a href="/admin/postagens/edit/{{_id}}" class="btn btn-success mt-3">Editar Postagem</a>
            <a href="/admin/postagens/deletar/{{_id}}" class="btn btn-danger mt-3">Deletar Postagem</a>
        </div>
    </div>
{{else}}
    <p>Nenhuma Categoria registrada</p>
{{/each}}