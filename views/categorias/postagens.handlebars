

<h2>{{categoria.nome}}</h2>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}" class="btn btn-success">Leia mais...</a>
            <hr>
            <small>Data de Publicação: {{data}}</small>
        </div>
    </div>
{{else}}
    <h3>Nenhuma postagem</h3>
{{/each}}